# Install the Apache package

---
- hosts: 
  become: yes
  tasks:
  - name: Install "Gnome desktop" pkg on Redhat
    yum:
      name: "@^gnome-desktop-environment"
      state: present
      when: ansible_os_family == "Redhat"
  - name: Install "Gnome desktop" pkg on Ubuntu
    yum:
      name: "@^gnome-desktop-environment"
      state: present
      when: ansible_os_family == "Ubuntu"
      
      
